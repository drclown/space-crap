<script>
$( document ).ready(function() {
    $("#play").on("click", function() {
        console.log($(this).val());
        var pathVideo = $(this).val();
        $.ajax({
            type: "POST",
            data: {pathFile: pathVideo},
            url: Routing.generate("homesoft_platform_files_link_file")
        });
        $.ajax({
            type: "GET",
            data: {cmd: "play"},
            url: Routing.generate("homesoft_platform_files_cmd_ctrl")
        });
    });
    $(".execute-cmd").on("click", function() {
        var id = $(this).attr("id");
        $.ajax({url: Routing.generate("homesoft_platform_files_cmd_ctrl", {cmdCtrlVideo: id})});
    });
});
</script>