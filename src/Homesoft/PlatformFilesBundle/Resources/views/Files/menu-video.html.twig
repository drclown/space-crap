            <a id="fast-backward" class="execute-cmd btn btn-warning btn-lg" href="#"><span class="fa fa-fast-backward"></span>&nbsp;</a>
            <a id="step-backward" class="execute-cmd btn btn-info btn-lg" href="#"><span class="fa fa-step-backward"></span>&nbsp;</a>
            <a id="backward" class="execute-cmd btn btn-info btn-lg" href="#"><span class="fa fa-backward"></span>&nbsp;</a>
            <a id="play" class="btn btn-success btn-lg" href="#"><span class="fa fa-play"></span>&nbsp;</a>
            <a id="pause" class="execute-cmd btn btn-info btn-lg" href="#"><span class="fa fa-pause"></span>&nbsp;</a>
            <a id="stop" class="execute-cmd btn btn-danger btn-lg" href="#"><span class="fa fa-stop"></span>&nbsp;</a>
            <a id="forward" class="execute-cmd btn btn-info btn-lg" href="#"><span class="fa fa-forward"></span>&nbsp;</a>
            <a id="step-forward" class="execute-cmd btn btn-info btn-lg" href="#"><span class="fa fa-step-forward"></span>&nbsp;</a>
